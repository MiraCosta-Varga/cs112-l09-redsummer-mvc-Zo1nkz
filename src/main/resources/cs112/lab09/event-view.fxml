<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs112.lab09.controllers.EventController">
   <bottom>
      <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onCloseButtonClick" text="Close" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <VBox alignment="CENTER" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="locationLabel" text="Location">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Label>
                  <Label fx:id="dateLabel" text="Date" />
               </children>
            </VBox>
         </top>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="descriptionLabel" text="Description" textAlignment="CENTER" wrapText="true">
                     <padding>
                        <Insets bottom="8.0" />
                     </padding></Label>
                  <Label fx:id="revisedDescriptionLabel" alignment="TOP_LEFT" text="RevisedDescription" textAlignment="CENTER" wrapText="true" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </right>
</BorderPane>
